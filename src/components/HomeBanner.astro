---
import GithubIcon from "../assets/github-icon.astro";
import Hand from "../assets/hand.astro";
import LinkedinIcon from "../assets/linkedin-icon.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<section
  class="flex flex-col items-center gap-y-10 md:flex-row md:justify-between md:gap-x-24"
>
  <div>
    <h1 class="text-3xl text-white font-bold">{title} <Hand /></h1>
    <p class="text-lg text-gray-500 mb-5">
      Desarrollador Web Full Stack con 2 años de experiencia en el desarrollo de
      aplicaciones web con React.
    </p>

    <div class="flex flex-col gap-y-4">
      <a
        href="https://www.linkedin.com/in/andres-vizcaino-salazar"
        target="_blank"
        class="flex items-center justify-center bg-gray-200 hover:bg-gray-300 rounded-full px-4 py-2"
      >
        <LinkedinIcon />
      </a>
      <a
        href="https://github.com/pipegoods"
        target="_blank"
        class="flex items-center justify-center bg-gray-200 hover:bg-gray-300 rounded-full px-4 py-2"
      >
        <GithubIcon />
      </a>
    </div>
  </div>
  <div class="shrink-0 hover:animate-pulse">
    <img
      class="h-auto w-64 rounded-full max-w-full border-white border-8"
      loading="lazy"
      src="/img/photo-andres-vizcaino.jpg"
      alt="Foto de Andrés Vizcaíno"
    />
  </div>
</section>
