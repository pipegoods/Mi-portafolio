---
const jobs = [
  {
    name: "igloolab",
    description:
      "Un laboratorio creativo, expertos en la creación de estrategias disruptivas e innovadoras en marketing farmacéutico que generan un gran impacto en la industria de la salud.",
    startDate: "Abril 2021",
    endDate: "Actualidad",
    city: "Cali",
    image: "igloolab",
  },
  {
    name: "Sima Digital",
    description:
      "Impulsamos a tu empresa hasta la cúspide con el marketing digital.",
    startDate: "Mayo 2020",
    endDate: "Actualidad",
    city: "Cartagena",
    image: "sima",
  },
];
---

<section class="text-center">
  <h1 class="text-white text-3xl mb-10 font-bold">Donde he trabajado</h1>
  <div class="flex flex-wrap justify-center">
    {
      jobs.map((job) => (
        <div class="w-full md:w-1/2 p-3">
          <div class="bg-white rounded-lg shadow-lg">
            <div class="flex flex-col items-center justify-center p-6">
              <img
                src={`/img/logos/${job.image}.png`}
                class="w-32 h-32 rounded-full"
                alt={`imagen de ${job.image}`}
              />
              <h2 class="text-2xl font-bold my-3">{job.name}</h2>
              <p class="text-gray-600 text-base my-1">{job.description}</p>
              <p class="text-gray-400 text-base my-1">
                {job.startDate} - {job.endDate}
              </p>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
